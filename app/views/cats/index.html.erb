<p id="notice"><%= notice %></p>

<h1>Cats</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Date spotted</th>
      <th>Location</th>
      <th>Colour</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Would pat again</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cats.each do |cat| %>
      <tr>
        <td><%= cat.picture %></td>
        <td><%= cat.date_spotted %></td>
        <td><%= cat.location %></td>
        <td><%= cat.colour %></td>
        <td><%= cat.description %></td>
        <td><%= cat.rating %></td>
        <td><%= cat.would_pat_again %></td>
        <td><%= link_to 'Show', cat %></td>
        <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
        <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

